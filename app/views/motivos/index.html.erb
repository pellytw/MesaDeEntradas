<h1>Listado de Motivos</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @motivos.each do |motivo| %>
  <tr>
    <td><%= motivo.nombre %></td>
    <td><%= link_to 'Ver', motivo %></td>
    <td><%= link_to 'Editar', edit_motivo_path(motivo) %></td>
    <td><%= link_to 'Eliminar', motivo, method: :delete, data: { confirm: '¿Está seguro que desea eliminar?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo Motivo', new_motivo_path %>
