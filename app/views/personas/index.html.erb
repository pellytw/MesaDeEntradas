<h1>Listado de Personas</h1>

<table>
  <tr>
    <th>Tipo de documento agente</th>
    <th>Documento</th>
    <th>Apellidos</th>
    <th>Nombres</th>
    <th>Localidad</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @personas.each do |persona| %>
  <tr>
    <td><%= persona.tipo_de_documento_agente_id %></td>
    <td><%= persona.documento %></td>
    <td><%= persona.apellidos %></td>
    <td><%= persona.nombres %></td>
    <td><%= persona.localidad_id %></td>
    <td><%= link_to 'Ver', persona %></td>
    <td><%= link_to 'Editar', edit_persona_path(persona) %></td>
    <td><%= link_to 'Eliminar', persona, method: :delete, data: { confirm: '¿Está seguro que desea eliminar?' } %></td>
  </tr>
<% end %>
</table>

